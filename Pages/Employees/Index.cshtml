@page
@using RazorPages.Models;
@model RazorPages.Pages.Employees.IndexModel
@{
    ViewData["Title"] = "Employees";
}

<h1>@Model.Message</h1>

<div class="card-group">
    @foreach (var employee in Model.Employees ?? new List<Employee>())
    {
        <div class="card" style="width: 20rem;">
            <img class="card-img-top" src="@employee.Photo" alt="@employee.Name" style="height: 200px;">
            <div class="card-body">
                <h5 class="card-title">@employee.Name</h5>
                <div class="card-footer text-center">
                    <a asp-page="/Employees/Details" asp-route-id="@employee.Id" class="btn btn-primary m-1">View</a>
                    <a asp-page="/Employees/Edit" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                    <a href="#" class="btn btn-danger m-1">Delete</a>
                </div>
            </div>
        </div>
    }
</div>